<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cinema.service.FAQDAO">
    <select id="getAllFAQs" parameterType="map" resultType="com.cinema.service.FAQDTO">
        SELECT * FROM FAQ
        LIMIT #{size} OFFSET #{offset}
    </select>

    <select id="getTotalFAQCount" resultType="int">
        SELECT COUNT(*) FROM FAQ
    </select>

    <select id="getFAQById" parameterType="long" resultType="com.cinema.service.FAQDTO">
        SELECT * FROM FAQ WHERE id = #{id}
    </select>

    <insert id="addFAQ" parameterType="com.cinema.service.FAQDTO">
        INSERT INTO FAQ (title, content, created_at, views)
        VALUES (#{title}, #{content}, #{createdAt}, #{views})
    </insert>

    <update id="updateFAQ" parameterType="com.cinema.service.FAQDTO">
        UPDATE FAQ
        SET title = #{title}, content = #{content}, created_at = #{createdAt}, views = #{views}
        WHERE id = #{id}
    </update>

    <delete id="deleteFAQ" parameterType="long">
        DELETE FROM FAQ WHERE id = #{id}
    </delete>
</mapper>
